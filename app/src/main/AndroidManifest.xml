<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.convo_z">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup">
        <activity android:name=".Status.OwnStatus" />
        <activity android:name=".Status.StatusPrivacy" />
        <activity
            android:name=".Status.ViewStatus"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Signup.SignupClass" />
        <activity android:name=".Login.LoginClass" />
        <activity android:name=".ChatDetailActivity" />
        <activity android:name=".Verification.PhoneVerification" />
        <activity android:name=".Verification.OTPVerification" />
        <activity android:name=".Status.StatusPage" />
        <activity
            android:name=".Splash.Splashscreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>