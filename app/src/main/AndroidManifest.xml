<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.convo_z">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="DataExtractionRules"
        tools:replace="android:allowBackup"
        tools:targetApi="s">

        <activity android:name=".viewmodel.ui.status.OwnStatusPage" />
        <activity android:name=".viewmodel.ui.status.StatusPrivacyPage" />
        <activity
            android:name=".viewmodel.ui.status.ViewStatusPage"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".viewmodel.ui.settings.ProfileSettingsActivity" />
        <activity
            android:name=".viewmodel.ui.home.HomeActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity android:name=".viewmodel.ui.authentication.SignupActivity" />
        <activity android:name=".viewmodel.ui.authentication.LoginActivity" />
        <activity android:name=".viewmodel.ui.chat.ChatActivity" />
        <activity android:name=".viewmodel.ui.verification.PhoneVerificationPage" />
        <activity android:name=".viewmodel.ui.verification.OTPVerificationPage" />
        <activity android:name=".viewmodel.ui.status.AddStatusPage" />
        <activity
            android:name=".viewmodel.ui.splash.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>