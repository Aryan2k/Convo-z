<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84E032"
    tools:context=".Verification.OTPVerification">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="285dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@drawable/screenshot_1700" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="-50dp"
         />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="-21dp"
        android:background="@drawable/core_colour"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@id/textView"
            android:layout_width="374dp"
            android:layout_height="81dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="59dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="OTP Verification"
            android:textColor="@drawable/utility_colour"
            android:textSize="24sp"
            app:fontFamily="@font/candal" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="383dp"
            android:layout_height="43dp"
            android:layout_alignBottom="@+id/textView"

            android:layout_marginBottom="-49dp"
            android:background="#e8f4f8"
            android:ems="10"
            android:fontFamily="@font/candal"
            android:hint="Enter the One-Time Password"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColorHint="	#989898" />

    </RelativeLayout>

    <Button
        android:id="@+id/verifyotp"
        android:layout_width="159dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/container"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginBottom="-74dp"

        android:background="@drawable/general_button"
        android:fontFamily="serif"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Verify OTP!"
        android:textAlignment="center"
        android:textColor="@drawable/utility_colour"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.333" />
</RelativeLayout>