<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Status.ViewStatus">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext_tp"
                    android:ems="10"
                    android:gravity="center_horizontal|top"
                    android:hint="Reply"
                    android:imeOptions="flagNoFullscreen"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:paddingBottom="4dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#d9d9d9"
                    android:textSize="15sp"
                    android:translationY="-5dp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="3dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:src="@drawable/ic_paper_plane"
                    android:translationY="-14dp"
                    app:tintMode="src_in" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="580dp"
        android:defaultFocusHighlightEnabled="true"
        android:fontFamily="@font/amethysta"
        android:gravity="center_horizontal"
        android:paddingTop="14dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="16.5sp"
        android:translationY="-20dp" />

    <LinearLayout
        android:id="@+id/progressLinear"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:paddingTop="5dp" />

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="600dp"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:onClick="back"
            android:layout_marginTop="15dp"
            android:tint="#ffffff"
            android:translationX="20dp"
            app:srcCompat="@drawable/ic_arrow" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_user"
            android:translationX="35dp"
            android:translationY="0dp"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:translationY="-11dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/amethysta"
                android:gravity="center|left"
                android:paddingLeft="3dp"
                android:paddingTop="7dp"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/amethysta"
                android:paddingLeft="5dp"
                android:translationY="-2dp"
                android:paddingBottom="2dp"
                android:textColor="#ffffff"
                android:textSize="11.5sp"
                tools:text="Time" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonRight"
        android:layout_width="125dp"
        android:layout_height="565dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="-4dp"
        android:layout_marginBottom="66dp"
        android:background="#00000000"
        android:text=""
        android:translationY="-22dp" />

    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="125dp"
        android:layout_height="565dp"
        android:layout_marginBottom="0dp"
        android:background="#00000000"
        android:text=""
        android:translationX="0dp"
        android:translationY="78dp" />

</RelativeLayout>