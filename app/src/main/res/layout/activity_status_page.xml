<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8d3f4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/camera"
        android:layout_alignParentTop="true"
        android:background="@drawable/core_colour">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="156dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:onClick="onCameraClick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView7"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_camera_3"> </ImageView>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="96dp"
                android:layout_height="33dp"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:foregroundGravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.64"
                app:srcCompat="@drawable/ic_eye"> </ImageView>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:foregroundGravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView7"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.52"
                app:srcCompat="@drawable/ic_pencil_5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_below="@id/l1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/su"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@id/l1"
            android:layout_below="@+id/camera"
            android:fontFamily="@font/amethysta"
            android:gravity="center_horizontal|center_vertical"
            android:text="Share a status update!"
            android:textSize="24sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:scrollbarSize="10dip"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/su"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="0dp">

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:onClick="onCameraClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/su"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/ic_camera"
                    tools:layout_editor_absoluteX="8dp" />

            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="497dp"
        android:layout_alignParentBottom="true"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/caption"
            android:layout_width="450dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:fontFamily="@font/amethysta"
            android:hint="Enter a caption!"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="782dp" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="63dp"
            android:layout_height="44dp"
           android:layout_marginTop="3dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_paper_plane"
            app:tintMode="src_in"
            tools:layout_editor_absoluteX="416dp"
            tools:layout_editor_absoluteY="782dp" />

    </LinearLayout>

</RelativeLayout>

