<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84E032">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="475dp"
        android:layout_height="155dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/screenshot_1700" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="263dp"
        android:background="@drawable/core_colour"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/candal"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Get Started!"
            android:textColor="@drawable/utility_colour"
            android:textSize="35sp"
            app:fontFamily="@font/candal" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="#e8f4f8"
            android:ems="10"
            android:fontFamily="@font/candal"
            android:hint="Full Name"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColorHint="	#989898" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#e8f4f8"
            android:ems="10"
            android:fontFamily="@font/candal"
            android:hint="Email ID"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColorHint="	#989898" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="#e8f4f8"
            android:ems="10"
            android:fontFamily="@font/candal"
            android:hint="Password Here "
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColorHint="	#989898" />

        <EditText
            android:id="@+id/repassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:background="#e8f4f8"
            android:ems="10"
            android:fontFamily="@font/candal"
            android:hint="Re-enter Password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColorHint="	#989898" />

    </LinearLayout>

    <Button
        android:id="@+id/signup"
        android:layout_width="159dp"
        android:layout_height="39dp"
        android:background="@drawable/general_button"
        android:fontFamily="serif"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="SIGN UP!"
        android:textAlignment="center"
        android:textColor="@drawable/utility_colour"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/signupPhone"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/general_button"
        android:fontFamily="serif"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="SIGN UP USING PHONE"
        android:textAlignment="center"
        android:textColor="@drawable/utility_colour"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="319dp"
        android:layout_height="42dp"
        android:background="@drawable/core_colour"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.352">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/candal"
            android:paddingLeft="4dp"
            android:text="Other ways to sign up!"
            android:textColor="@drawable/utility_colour"
            android:textSize="24sp"
            app:fontFamily="@font/candal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="43dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.173">

        <Button
            android:id="@+id/google"
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/utility_colour"
            android:drawableLeft="@drawable/ic_google"
            android:drawingCacheQuality="auto"
            android:gravity="center|center_horizontal|center_vertical"
            android:paddingLeft="10dp"
            android:text="Google"
            android:textAlignment="center"
            android:textColor="#000000" />

        <Button
            android:id="@+id/facebook"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="#3b5998"
            android:drawableLeft="@drawable/ic_facebook"
            android:drawablePadding="-5dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Facebook"
            android:textAlignment="center"
            android:textColor="@drawable/utility_colour" />
    </LinearLayout>

    <Button
        android:id="@+id/signinn"
        android:layout_width="219dp"
        android:layout_height="24dp"
        android:background="#84E032"
        android:fontFamily="@font/candal"
        android:text="Click here to sign in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>