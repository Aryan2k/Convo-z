<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:tag="Status"
    tools:context=".Fragments.StatusFragment"
    android:orientation="vertical"
    android:focusable="true">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="true">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:src="@drawable/ic_user"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:background="@drawable/imageborder"
                    android:clickable="false"
                    android:cropToPadding="true"
                    android:padding="1dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintBottom_toBottomOf="@+id/profileImage"
                    app:layout_constraintStart_toStartOf="@+id/profileImage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:clickable="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNameList"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/amethysta"
                    android:gravity="center|left"
                    android:paddingLeft="2dp"
                    android:paddingTop="12dp"
                    android:layout_marginTop="2dp"
                    android:text="My status"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:clickable="false"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastMessage"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginTop="2dp"
                    android:clickable="false"
                    android:backgroundTint="#ffffff"
                    android:textSize="13dp"
                    android:fontFamily="@font/amethysta"
                    android:paddingLeft="4dp"
                    android:text="Tap to add status update"
                    android:textColor="#404040" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/amethysta"
                android:text="Recent updates"
                android:textStyle="bold"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentStatusRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recentStatusRecyclerView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12.5dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/amethysta"
                android:paddingTop="2dp"
                android:text="Viewed updates"
                android:textStyle="bold"> </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/viewedStatusRecyclerView"
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/seen"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/muted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewedStatusRecyclerView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawablePadding="5.2dp"
                android:focusable="true"
                android:fontFamily="@font/amethysta"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="Muted updates"
                android:textStyle="bold">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mutedStatusRecyclerView"
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/muted"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp" />

        </RelativeLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>